<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray"
    android:backgroundTint="@android:color/darker_gray"
    android:visibility="visible">

    <TextView
        android:id="@+id/ConfirmOff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:text="Are you sure you want to turn down off?"
        android:textSize="20sp" />

    <Button
        android:id="@+id/Confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ConfirmOff"
        android:layout_alignStart="@+id/ConfirmOff"
        android:layout_below="@+id/ConfirmOff"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="43dp"
        android:text="Yes" />

    <Button
        android:id="@+id/DoNotConfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/ConfirmOff"
        android:layout_alignRight="@+id/ConfirmOff"
        android:layout_alignTop="@+id/Confirm"
        android:layout_marginEnd="36dp"
        android:layout_marginRight="36dp"
        android:text="No"
        android:visibility="visible" />
</RelativeLayout>